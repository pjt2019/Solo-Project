<div class="booyah-box col-10 offset-1">
  <h1>Edit Your Recipe</h1>
  <%= simple_form_for @recipe do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :ingredient %>
    <%= f.input :instruction %>
    <br />
    <%= f.input :photo %>    
    <br />
    <%= f.submit "Update", class: 'btn btn-primary' %>
    <% end %>
    <br />
</div>
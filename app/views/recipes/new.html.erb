<div class="booyah-box col-10 offset-1">
  <h1>Add a new recipe</h1>
  <%= simple_form_for @recipe, url: recipes_path(@recipe) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :ingredient %>
    <%= f.input :instruction %>
    <%= f.input :photo %>
    
    <br />
    <%= f.submit "Add a Photo", class: 'btn btn-primary' %>
    <br />
    <br />
    <%= f.submit "Create", class: 'btn btn-primary' %>
    <% end %>
    <br />
</div>







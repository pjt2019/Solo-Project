<div class="booyah-box col-10 offset-1">
  <h1>Add a new recipe</h1>
  <%= simple_form_for @recipe, url: author_recipes_path do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :ingredient %>
    <%= f.input :instructions %>
    <br />
    <%= f.submit "Create", class: 'btn btn-primary' %>
    <% end %>
    <br />
</div>